<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewThumbnail"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="Galeriebild"/>

    <ImageView
        android:id="@+id/imageViewDeleteIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_delete_item"
        android:padding="6dp"  android:background="@drawable/delete_icon_circle_bg" android:contentDescription="Bild entfernen"
        app:tint="?attr/colorOnError" /> </FrameLayout>